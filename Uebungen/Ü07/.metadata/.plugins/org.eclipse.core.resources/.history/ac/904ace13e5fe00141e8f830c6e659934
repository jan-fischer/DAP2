public class Main {
	static int[] A = { 1, 2, 3, 4, 1, 5, 4, 8, 89, 100, 1001 };
	static int[][] mem;

	public static int Z(int i, int j) {

		if (i > 0 && (A[i - 1] < A[i])) {
			return Z(i - 1, j);
		} else if (i > 0 && A[i - 1] >= A[i]) {
			return Math.max(Z(i - 1, i - 1), (j - i) + 1);
		} else {
			return j - i + 1;
		}
	}

	public static int Z2(int i, int j) {
		if (mem[i][j] != -1)
			return mem[i][j];
		else {
			if (i > 0 && (A[i - 1] < A[i])) {
				mem[i][j] = Z(i - 1, j);

			} else if (i > 0 && A[i - 1] >= A[i]) {
				mem[i][j] = Math.max(Z(i - 1, i - 1), (j - i) + 1);
			} else {
				mem[i][j] = j - i + 1;
			}

			return mem[i][j];
		}
	}

	public static void initFeld(int i) {
		mem = new int[i + 1][i + 1];
		for (int k = 0; k <= i + 1; k++) {
			for (int l = 0; l <= i + 1; l++) {
				mem[k][l] = -1;
			}
		}
	}

	public static void main(String[] args) {
		initFeld(A.length);
		System.out.println(Z2(A.length - 1, A.length - 1));
	}
}
